<UserControl x:Class="CadwiseATMEmulator.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CadwiseATMEmulator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Content="Снять наличные" Margin="5,5,5,5" Command="local:ATMCommands.ShowAskMoneyScreen"/>
        <Button Grid.Column="1" Content="Внести наличные" Margin="5,5,5,5" Command="local:ATMCommands.ShowPutMoneyScreen"/>
    </Grid>
</UserControl>
