<UserControl x:Class="CadwiseATMEmulator.BillsSelector"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid x:Name="BillsGrid" Grid.Row="0" Background="Beige" Margin="5,5,5,5">
        </Grid>
        <Label x:Name="Total" Grid.Row="1" Background="Beige" Margin="5,5,5,5"
               FontSize="20" 
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Content ="{Binding TotalString}"/>
    </Grid>
</UserControl>
